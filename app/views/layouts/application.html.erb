<!DOCTYPE html>
<html>
<head>
  <title>ちくしょうジェネレータ</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".chikusho-navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "ちくしょうジェネレータ", root_path, class: 'navbar-brand' %>
      </div>
      <nav class="collapse navbar-collapse chikusho-navbar-collapse" role="navigation">
        <ul class="nav navbar-nav">
          <li class=<%= 'active' if action_name =~ /select_flame_and_upload|adjust_photo|create_photo/ %>>
            <%= link_to '写真をつくる', select_flame_and_upload_path %>
          </li>
          <li class=<%= 'active' if action_name =~ /show_gallery|show_photo/ %>>
            <%= link_to '写真をみる', show_gallery_path %>
          </li>
        </ul>
      </nav>
    </div>
  </header>
  <%= yield %>
</body>
</html>
